<div class="content">
  <form class="block-form" action="<%= path %>">
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <div class="header">
      <a class="back-button fa fa-chevron-left" href="/projects/<%= project.id %>/<%= pane %>"></a>
      <% if(block) { %>
        <input type="text" class="block-title" name="title" placeholder="Give Your Block A Title" value="<%= block.title %>" step="1" required>
        <div class="delete-button">Delete</div>
        <input class="save-button" value="Save" type="submit">
      <% } else { %>
        <input type="text" class="block-title" name="title" placeholder="Give Your Block A Title" step="1" autofocus required>
        <div class="delete-button" style="display: none">Delete</div>
        <input class="save-button" value="Create" type="submit">
      <% } %>
      <div class="clear"></div>
    </div>
    <div class="block-editor">
      <textarea class="payload" name="html"><%= block ? block.html : "" %></textarea>
      <div class="variable-selection">
        <div class="variable-header">Super Variables</div>
        <div class="variable-explanation">
          Super variables can be accessed from<br>
          any block in this project.
        </div>
        <div class="variables">
          <variable class="super">user name</variable>
          <variable class="super">user email</variable>
        </div>
        <div class="variable-header">Block Variables</div>
        <div class="variable-explanation">
          Block variables can only be accessed<br>
          from this block.
        </div>
        <div class="variables">
          <variable class="block">price</variable>
          <variable class="block">discount</variable>
        </div>
      </div>
    </div>
  </form>
  <div class="clear"></div>
</div>
