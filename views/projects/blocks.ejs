<div class="content">
  <div class="header">
    <a href="<%= path %>/blocks/create" class="new-button fa fa-plus"></a>
    <div class="search-box">
      <div class="icon fa fa-search"></div>
      <input class="search input" type="text" placeholder="Search for a pylot by title, tags..."/>
    </div>
    <div class="clear"></div>
  </div>
  <% if(blocks.length > 0) { %>
    <table class="data-table">
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Dynamic Text</td>
          <td>Updated</td>
        </tr>
      </thead>
      <tbody>
        <% blocks.forEach(function(block) { %>
          <tr href="<%= path %>/blocks/<%= block.id %>">
            <td><div class="fa fa-pencil"></div></td>
            <td><%= block.title %></td>
            <td><%- block.html %></td>
            <td><%=: block.updatedAt | humanize %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="new-block-message">
      <div class="message">Create Your First Block</div>
      <div class="submessage">
        Blocks allow you to change the text in app on the fly.<br>
        That's right, <strong>no more waiting on Apple!</strong>
      </div>
      <a class="new-button" href="<%= path %>/blocks/create">
        Lets Do This!
      </a>
    </div>
  <% } %>
</div>
